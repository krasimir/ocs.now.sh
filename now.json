{
  "name": "octomments-site",
  "version": 2,
  "builds": [
    {
      "src": "api/*.*",
      "use": "@now/node"
    },
    {
      "src": "assets/*.*",
      "use": "@now/static"
    },
    {
      "src": "page/*.*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/octomments/issue",
      "dest": "/api/issue.js"
    },
    {
      "src": "/octomments/token",
      "dest": "/api/token.js"
    },
    {
      "src": "/page/(.*)",
      "dest": "page/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "page/index.html"
    }
  ]
}